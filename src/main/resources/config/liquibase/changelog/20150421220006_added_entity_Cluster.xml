<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">

    <property name="now" value="now()" dbms="mysql,h2"/>
    <property name="now" value="current_timestamp" dbms="postgresql"/>

    <!--
        Added the entity Cluster.
    -->
    <changeSet id="20150421220006" author="jhipster">
        <createTable tableName="CLUSTER">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="clustername" type="varchar(255)"/>
            <column name="version" type="varchar(255)"/>
            <column name="size" type="integer"/>
            <column name="replication" type="integer"/>
            <column name="blocksize" type="integer"/>
            <column name="submit_time" type="timestamp"/>
            <column name="stop_time" type="timestamp"/>
            <column name="exit_status" type="integer"/>
            <column name="status" type="varchar(255)"/>
            <column name="username" type="varchar(255)"/>
        </createTable>
        <dropDefaultValue tableName="CLUSTER" columnName="submit_time" columnDataType="datetime"/>

        <dropDefaultValue tableName="CLUSTER" columnName="stop_time" columnDataType="datetime"/>

        
    </changeSet>
</databaseChangeLog>
